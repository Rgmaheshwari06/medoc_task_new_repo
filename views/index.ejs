<%- include("./partials/header")  %>

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Todo_list App</a>
</nav>

<div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
        <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2">
    </form>


    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
        <li class="list-group-item"><%= todos.todo %> <a href="/delete/todo/<%= todos._id %>"
                class="btn btn-danger btn-sm">Delete</a><form action="/edit/todo/<%= todos._id %>" method="POST" class="d-flex">
                    <input type="text" name="todo" placeholder="Edit your task">
                    <input type="submit" value="Confirm Edit" class="btn btn-md btn-primary mx-1">
                </form></li>
        <% }) %>
    </ul>
</div>

<%- include("./partials/footer")  %>
